# ========================================
# PPIV - Variables de Entorno de Ejemplo
# ========================================
# Copia este archivo como .env y configura tus valores

# ========================================
# DESARROLLO LOCAL (Docker)
# ========================================

# Base de datos MySQL (Desarrollo)
MYSQL_ROOT_PASSWORD=rootpassword
DB_NAME=ppiv_db
DB_USER=root
DB_PASSWORD=rootpassword
DB_HOST=mysql
DB_PORT=3306

# Flask Configuration (Desarrollo)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# Email Configuration (Desarrollo)
MAIL_SERVER=smtp.gmail.com
MAIL_USERNAME=dev@gmail.com
MAIL_PASSWORD=dev-password
MAIL_DEFAULT_SENDER=dev@gmail.com

# Frontend URL (Desarrollo)
URL_FRONT=http://localhost:3000

# Environment (Desarrollo)
IS_PRODUCTION=false
FLASK_ENV=development
FLASK_DEBUG=1

# ========================================
# PRODUCCIÓN (Render + Vercel)
# ========================================

